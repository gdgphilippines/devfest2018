@import '../../styles/general/layout.styl';
@import '../../styles/general/spacing.styl';
@import '../../styles/general/typography.styl';
@import '../../styles/general/color.styl';
@import '../../styles/components/card.styl';
@import '../../styles/components/button.styl';

:host
  display grid
  grid-template-columns repeat(auto-fill, minmax(200px, 1fr))
  justify-content space-around
  grid-gap 12px
  max-width 800px
  margin 24px auto
  width 100%

.h2
  h2-base($dark)
  margin 0
  margin-bottom 24px;
  flex 1

.card
  display block
  text-decoration none
  min-height 150px
  display flex
  flex-direction column
  padding 24px

.codelabs-logo
  width 40px
  height 40px

button-class()

.button
  margin-left 48px
  flex 1

.button-area
  display flex
  align-items center
